@model IEnumerable<FishingIndustry.Models.FishType>

@{
    ViewData["Title"] = "Виды рыб";
}


<div class="container">
    <h1 class="mb-4">Виды рыб</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Добавить новый вид
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 200px;">Изображение</th>
                    <th>Название</th>
                    <th>Семейство</th>
                    <th>Среда обитания</th>
                   
                    <th style="width: 100px;">Цена за кг</th>
                    <th>Рыболовные зоны</th>
                    <th style="width: 180px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="img-thumbnail" style="max-width: 250px; max-height: 250px;" />
                            }
                            else
                            {
                                <span class="text-muted">Нет изображения</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Family)</td>
                        <td>@Html.DisplayFor(modelItem => item.HabitatType)</td>
              
                        <td>@Html.DisplayFor(modelItem => item.AveragePricePerKg) ₽</td>
                        <td>
                            @if (item.FishingZones != null && item.FishingZones.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var zone in item.FishingZones)
                                    {
                                        <a href="@Url.Action("Details", "FishingZones", new { id = zone.Id })"
                                           class="badge bg-primary text-decoration-none">
                                            @zone.Name
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Не указаны</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <!-- Подключение Font Awesome для иконок -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}
