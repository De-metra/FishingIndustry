@model IEnumerable<FishingIndustry.Models.Vessel>

@{
    ViewData["Title"] = "Рыбо-промышленные суда";
}

<div style="width: 100%; height: 500px;">
    <iframe src="https://www.marinetraffic.com/en/ais/embed/zoom:12/centerx:20.5087/centery:54.7016/maptype:3/shownames:false/mmsi:0"
            width="100%"
            height="500"
            frameborder="0"
            style="border:0"
            allowfullscreen>
    </iframe>
</div>
<hr />
<h1>Самые известные рыбно-промышленные суда</h1>
<div class="mb-4">
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Добавить новое судно
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="width: 200px;">Изображение</th>
                <th>Регистрационный номер</th>
                <th>Название</th>
                <th>Тип судна</th>
                <th>Год выпуска</th>


                <th style="width: 180px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="img-thumbnail" style="max-width: 250px; max-height: 250px;" />
                        }
                        else
                        {
                            <span class="text-muted">Нет изображения</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.RegistrationNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.TypeVessel)</td>
                    <td>@Html.DisplayFor(modelItem => item.YearBuilt)</td>
                    
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



@section Scripts {
    <!-- Подключение Font Awesome для иконок -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}
